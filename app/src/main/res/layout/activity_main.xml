        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_five"
        app:layout_constraintEnd_toEndOf="@+id/layout_three"
        app:layout_constraintStart_toStartOf="@+id/layout_three"
        app:layout_constraintTop_toTopOf="@+id/layout_five"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/six"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="6" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_zero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_zero"
        app:layout_constraintTop_toTopOf="@+id/layout_zero"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/back"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="←" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_e"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_d"
        app:layout_constraintEnd_toEndOf="@+id/layout_b"
        app:layout_constraintStart_toStartOf="@+id/layout_b"
        app:layout_constraintTop_toTopOf="@+id/layout_d"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/E"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="E" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_b"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_a"
        app:layout_constraintEnd_toEndOf="@+id/layout_eight"
        app:layout_constraintStart_toStartOf="@+id/layout_eight"
        app:layout_constraintTop_toTopOf="@+id/layout_a"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/B"
            style="@style/ColorText.Digit"

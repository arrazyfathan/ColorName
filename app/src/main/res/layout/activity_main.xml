            android:id="@+id/five"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="5" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/hex"
        style="@style/ColorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#00FFFF" />

    <TextView
        android:id="@+id/rgb"
        style="@style/ColorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hex"
        tools:text="0,255,255" />

    <TextView
        android:id="@+id/color_name"
        style="@style/ColorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rgb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/hex"
        tools:text="cyan" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/white"
        app:indicatorSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/color_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/color_name"
        app:trackThickness="2dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_clear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_one"
        app:layout_constraintEnd_toStartOf="@+id/layout_zero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgb"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/clear"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="⊗" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_one"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_four"
        app:layout_constraintEnd_toEndOf="@+id/layout_clear"
        app:layout_constraintStart_toStartOf="@+id/layout_clear"
        app:layout_constraintTop_toBottomOf="@+id/layout_clear"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/one"
            style="@style/ColorText.Digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="1" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_four"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_seven"
        app:layout_constraintEnd_toEndOf="@+id/layout_one"
        app:layout_constraintStart_toStartOf="@+id/layout_one"
        app:layout_constraintTop_toBottomOf="@+id/layout_one"
        app:strokeWidth="0dp">


            android:paddingVertical="4dp"
            android:text="4" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_seven"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_a"
        app:layout_constraintEnd_toEndOf="@+id/layout_four"
        app:layout_constraintStart_toStartOf="@+id/layout_four"
        app:layout_constraintTop_toBottomOf="@+id/layout_four"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/seven"
            style="@style/ColorText.Digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="7" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_a"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_d"
        app:layout_constraintEnd_toEndOf="@+id/layout_seven"
        app:layout_constraintStart_toStartOf="@+id/layout_seven"
        app:layout_constraintTop_toBottomOf="@+id/layout_seven"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/A"
            style="@style/ColorText.Digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="A" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_d"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layout_a"

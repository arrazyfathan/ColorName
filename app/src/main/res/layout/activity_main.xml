    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_e"
        app:layout_constraintEnd_toEndOf="@+id/layout_c"
        app:layout_constraintStart_toStartOf="@+id/layout_c"
        app:layout_constraintTop_toTopOf="@+id/layout_e"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/F"
            style="@style/ColorText.Digit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="4dp"
            android:text="F" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_c"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="#30000000"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_four"
        app:layout_constraintEnd_toEndOf="@+id/layout_two"
        app:layout_constraintStart_toStartOf="@+id/layout_two"
        app:layout_constraintTop_toTopOf="@+id/layout_four"
        app:strokeWidth="0dp">

